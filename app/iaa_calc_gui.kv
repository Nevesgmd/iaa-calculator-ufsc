WindowManager:
    LoginPage:
    HomePage:
    NewIndexesPage:

<TextInput>:
    font_size: 30
    size_hint: 0.6, 0.07
    background_normal: 'atlas://data/images/defaulttheme/textinput_active'
    border: (4, 4, 4, 4)

<Button>:
    font_size: 40
    color: 1, 1, 1, 1
    border: (4, 4, 4, 4)



<LoginPage>:
    name: "login"

    FloatLayout:
        Image:
            source: '../images/project-logo.png'
            size_hint: 0.9, 0.9
            pos_hint: {'x': -0.05, 'top':1.15}
        Image:
            source: '../images/calculator-icon.png'
            size_hint: 0.4, 0.4
            pos_hint: {'x': 0.46, 'top':0.9}
        TextInput:
            id: login
            pos_hint: {'x': 0.2, 'top':0.47}
            multiline: False
            write_tab: False
            cursor_color: (44/255, 44/255, 44/255, 0.8)
            hint_text: 'idUFSC, Matrícula, E-mail, CPF, ou Passaporte'

        TextInput:
            id: password
            pos_hint: {'x': 0.2, 'top':0.4}
            multiline: False
            write_tab: False
            cursor_color: (44/255, 44/255, 44/255, 0.8)
            password: True
            hint_text: 'Senha'
        Button:
            size_hint: 0.6, 0.1
            background_color: (44/255, 44/255, 44/255, 0.8)
            pos_hint: {'x': 0.2, 'top':0.33}
            text: 'Entrar'
            on_release:
                app.get_login_values()
                app.update_home_page()
                app.root.current = "home"
                root.manager.transition.direction = "left"

<HomePage>:
    name: "home"

    Label:
        id: name
        text: 'Nome do Estudante'
        font_size: 60
        color: (24/255, 24/255, 24/255, 0.8)
        pos_hint: {'x': 0, 'top': 1.4}

    Label:
        text: 'Possíveis notas'
        font_size: 35
        color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': 0, 'top': 1.17}

    Label:
        id: iaa
        text: 'IAA: '
        font_size: 40
        color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': -0.2, 'top': 1.3}

    Label:
        id: ia
        text: 'IA: '
        font_size: 40
        color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': 0, 'top': 1.3}

    Label:
        id: iap
        text: 'IAP: '
        font_size: 40
        color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': 0.2, 'top': 1.3}


    Button:
        background_color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': 0.2, 'top':0.27}
        text: 'Sair'
        size_hint: 0.3, 0.1
        on_release:
            app.root.current = "login"
            root.manager.transition.direction = "right"

    Button:
        size_hint: 0.3, 0.1
        background_color: (93/255, 160/255, 103/255, 0.8)
        pos_hint: {'x': 0.5, 'top':0.27}
        text: 'Calcular'
        on_release:
            app.update_new_indexes()
            app.root.current = "new_indexes"
            root.manager.transition.direction = "left"

<NewIndexesPage>:
    name: 'new_indexes'
    Label:
        text: 'Índices Calculados'
        font_size: 60
        color: (24/255, 24/255, 24/255, 0.8)
        pos_hint: {'x': 0, 'top': 1.2}

    Label:
        id: iaa
        text: 'IAA: '
        font_size: 50
        color: (54 / 255, 54 / 255, 54 / 255, 0.8)
        pos_hint: {'x': -0.2, 'top': 1}

    Label:
        id: ia
        text: 'IA: '
        font_size: 50
        color: (54 / 255, 54 / 255, 54 / 255, 0.8)
        pos_hint: {'x': 0, 'top': 1}

    Label:
        id: iap
        text: 'IAP: '
        font_size: 50
        color: (54 / 255, 54 / 255, 54 / 255, 0.8)
        pos_hint: {'x': 0.2, 'top': 1}

    Button:
        background_color: (44/255, 44/255, 44/255, 0.8)
        pos_hint: {'x': 0.35, 'top':0.35}
        text: 'Voltar'
        size_hint: 0.3, 0.1
        on_release:
            app.root.current = "home"
            root.manager.transition.direction = "right"
